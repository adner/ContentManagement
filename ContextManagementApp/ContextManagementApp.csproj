<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn);MEAI001</NoWarn>
</PropertyGroup>

  <ItemGroup>
    <Content Include="appsettings.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AgentFrameworkToolkit" Version="1.0.0-preview.260205.1" />
    <PackageReference Include="AgentFrameworkToolkit.OpenAI" Version="1.0.0-preview.260205.1" />
    <PackageReference Include="AgentFrameworkToolkit.Tools" Version="1.0.0-preview.260205.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="10.0.2" />
    <PackageReference Include="Microsoft.PowerPlatform.Dataverse.Client" Version="1.2.2" />
    <PackageReference Include="ModelContextProtocol" Version="0.8.0-preview.1" />

  </ItemGroup>

</Project>
